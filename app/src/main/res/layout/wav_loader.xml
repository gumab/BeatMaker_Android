<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin" >

<EditText
    android:id="@+id/editText1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/btnWL1"
    android:layout_toRightOf="@+id/textWav1"
    android:ems="10" >

    <requestFocus />
</EditText>

<Button
    android:id="@+id/btnWL1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/editText1"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:text="LOAD" />

<EditText
    android:id="@+id/editText2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/editText1"
    android:layout_alignRight="@+id/editText1"
    android:layout_below="@+id/editText1"
    android:ems="10" />

<Button
    android:id="@+id/btnWL2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/editText2"
    android:layout_alignLeft="@+id/btnWL1"
    android:layout_alignTop="@+id/editText2"
    android:text="LOAD" />

<EditText
    android:id="@+id/editText3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/editText2"
    android:layout_alignRight="@+id/editText2"
    android:layout_below="@+id/editText2"
    android:ems="10" />

<EditText
    android:id="@+id/editText4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/editText3"
    android:layout_alignRight="@+id/editText3"
    android:layout_below="@+id/editText3"
    android:ems="10" />

<Button
    android:id="@+id/btnWL3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/editText3"
    android:layout_alignLeft="@+id/btnWL2"
    android:layout_alignTop="@+id/editText3"
    android:text="LOAD" />

<Button
    android:id="@+id/btnWL4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/editText4"
    android:layout_alignLeft="@+id/btnWL3"
    android:layout_alignTop="@+id/editText4"
    android:text="LOAD" />

<Button
    android:id="@+id/btnWL5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editText4"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="46dp"
    android:text="닫기" />

<TextView
    android:id="@+id/textWav1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/editText1"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:text="WAV1" />

<TextView
    android:id="@+id/textWav2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/editText2"
    android:layout_alignParentLeft="true"
    android:layout_alignTop="@+id/editText2"
    android:text="WAV2" />

<TextView
    android:id="@+id/textWav3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/editText3"
    android:layout_alignParentLeft="true"
    android:layout_alignTop="@+id/editText3"
    android:text="WAV3" />

<TextView
    android:id="@+id/textWav4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/editText4"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/editText3"
    android:text="WAV4" />

</RelativeLayout>
